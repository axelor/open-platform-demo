<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="order-line-grid" title="Ordered Items" model="com.axelor.sale.db.OrderLine">
    <field name="order" />
    <field name="product" />
    <field name="price" />
    <field name="quantity" />
  </grid>

  <form name="order-line-form" title="Ordered Item" model="com.axelor.sale.db.OrderLine">
    <panel title="Overview">
      <field name="product" colSpan="12" />
      <field name="price" />
      <field name="quantity" />
    </panel>
    <panel-related field="taxes">
      <field name="name" />
      <field name="rate" />
    </panel-related>
  </form>

</object-views>
