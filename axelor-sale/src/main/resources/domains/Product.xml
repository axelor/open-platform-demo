<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.8.xsd">

  <module name="sale" package="com.axelor.sale.db"/>

  <entity name="Product">
    <string name="code" required="true" unique="true" min="2"/>
    <string name="name" required="true" unique="true" min="2"/>
    <string name="color"/>
    <many-to-one name="category" ref="ProductCategory"/>
  </entity>

</domain-models>
