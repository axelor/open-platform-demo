<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_1.0.xsd">
    <grid name="order-line-grid" title="Ordered Items">
        <field name="order"/>
        <field name="product"/>
        <field name="price"/>
        <field name="quantity"/>
    </grid>
    <form name="order-line-form" title="Ordered Item" cols="2">
        <field name="order"/>
        <field name="product"/>
        <field name="price"/>
        <field name="quantity"/>
        <break/>
        <notebook colSpan="4">
            <page title="Taxes" cols="1">
                <field name="taxes">
                    <grid title="Taxes">
                        <field name="name"/>
                        <field name="rate"/>
                    </grid>
                </field>
            </page>
        </notebook>
    </form>
</object-views>
